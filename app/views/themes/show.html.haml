%h1= @theme.name
.container
  .grid
    - @theme.images.each do |image|
      .cell

        %a{href: url_for(image)}
          = image_tag image.file, class: 'responsive-image'

        .rating-controls
          - if current_user
            = form_for @like do |f|
              .like-field
                = f.hidden_field :image_id, value: image.id
              .hidden-field
                = f.check_box :good
              .like-action
                = f.submit 'ğŸ‘'

          .rating
            = image.get_likes

          - if current_user
            = form_for @dislike do |f|
              .like-field
                = f.hidden_field :image_id, value: image.id
              .hidden-field
                = f.check_box :good
              .like-action
                = f.submit 'ğŸ‘'

.comments-container
  .comments-grid
    - @theme.comments.each do |comment|
      .comments-cell
        .comment-author
          = gravatar_for comment.user
        = comment.text

.new-comment-form
  - if current_user
    = render 'comments/form'
